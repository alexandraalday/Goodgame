<!DOCTYPE html>
<html>
  <head>
    <% include ../partials/head.ejs %>
    <link rel="stylesheet" type="text/css" href="/css/main.css"> 
  </head>
  
  <body>
    <% include ../partials/nav.ejs %>

    <main>
      <form class="form-horizontal" action="/users/<%=user.id%>?_method=PUT" method="POST">
        <fieldset>
          <legend id="legend" class="col-lg-10 col-lg-offset-2"><h3>Edit User</h3></legend>
          </div>
          
          <div class="form-group">
            <label class="col-lg-2 control-label">Profile Image</label>
            <div class="col-lg-6">
              <input class="form-control" name="icon" value="<%=user.icon%>" type="text">
            </div>
          </div>
          
          <div class="form-group">
            <label class="col-lg-2 control-label">Profile Description</label>
            <div class="col-lg-6">
              <input class="form-control" name="description" value="<%=user.description%>" type="text">
            </div>
          </div>

          <div class="form-group">
            <div class="col-lg-6 col-lg-offset-2">
              <input id="inverse-button" type="submit" class="btn btn-primary"></input>
            </div>
          </div>
        
        </fieldset>
      </form>
    </main>
  
  </body>
  
  <footer>
    <% include ../partials/footer.ejs %>
  </footer>

</html>