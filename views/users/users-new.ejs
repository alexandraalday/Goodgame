<!DOCTYPE html>
<html>
  <head>
    <% include ../partials/head.ejs %>
  </head>
  
  <body>
    <% include ../partials/newusernav.ejs %>

    <main>
      <div class="formContainer">
        <form class="form-horizontal" action="/users" method="POST">
          <fieldset>
            <legend class="col-lg-12 text-center"><i class="fa fa-user" aria-hidden="true"></i>  New User</legend>
            
            <div class="form-group">
              <label class="col-lg-2 control-label">Username</label>
              <div class="col-lg-8">
                <input class="form-control" name="username" placeholder="Username" type="text">
              </div>
            </div>
            
            <div class="form-group">
              <label class="col-lg-2 control-label">Password</label>
              <div class="col-lg-8">
                <input class="form-control" name="password" placeholder="Password" type="password">
              </div>
            </div>
            
            <div class="form-group">
              <label class="col-lg-2 control-label">Image</label>
              <div class="col-lg-8">
                <input class="form-control" name="icon" placeholder="Image URL" type="text">
              </div>
            </div>
            
            <div class="form-group">
              <label class="col-lg-2 control-label">Bio</label>
              <div class="col-lg-8">
                <input class="form-control" name="description" placeholder="Tweet sized description" type="text">
              </div>
            </div>

            <div class="form-group">
              <div class="text-center">
                <input type="submit" id="inverse-button" class="btn btn-primary"></input>
              </div>
            </div>
          
          </fieldset>
        </form>
      </div>
    </main>

  </body>

</html>