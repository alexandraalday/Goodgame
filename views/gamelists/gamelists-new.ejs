<!DOCTYPE html>
<html>
  <head>
    <% include ../partials/head.ejs %>
  </head>
  <body>
  <% include ../partials/nav.ejs %>

  <main style="padding-top: 70px">

<!--  new user form -->
<form class="form-horizontal" action="/gamelists" method="POST">
  <fieldset>
    <legend class="col-lg-10 col-lg-offset-2">New Gamelist</legend>
    <div class="form-group">
      <label class="col-lg-2 control-label">Title</label>
      <div class="col-lg-6">
        <input class="form-control" name="title" placeholder="Title (i.e. 'Currently Playing', 'Wishlist', 'Games I've Beaten', etc.)" type="text">
      </div>
    </div>
      <div class="form-group">
      <label class="col-lg-2 control-label">Author</label>
      <div class="col-lg-6">
        <input class="form-control" name="author" placeholder="Your username" type="text">
      </div>
    </div>
    <div class="form-group">
      <label class="col-lg-2 control-label">Cover Image</label>
      <div class="col-lg-6">
        <input class="form-control" name="coverImage" placeholder="Image URL" type="text">
      </div>
    </div>
    <div class="form-group">
      <label class="col-lg-2 control-label">Description</label>
      <div class="col-lg-6">
        <input class="form-control" name="description" placeholder="Description" type="text">
      </div>
    </div>
    <div class="form-group">
      <div class="col-lg-6 col-lg-offset-2">
        <input type="reset" class="btn btn-default"></input>
        <input type="submit" class="btn btn-primary"></input>
      </div>
    </div>
  </fieldset>
</form>

</main>

      
  </body>
</html>