<!DOCTYPE html>
<html>
  <head>
    <% include ../partials/head.ejs %>
  </head>
  
  <body>
    <% include ../partials/nav.ejs %>

    <main>
      <form class="form-horizontal" action="/gamelists" method="POST">
        <fieldset>
          <legend id="legend" class="col-lg-10 col-lg-offset-2"><h3>New Gamelist</h3></legend>
          
          <div class="form-group">
            <label class="col-lg-2 control-label">Title</label>
            <div class="col-lg-6">
              <input class="form-control" name="title" placeholder="Title (i.e. 'Currently Playing', 'Wishlist', 'Games I've Beaten', etc.)" type="text">
            </div>
          </div>
          
          <input class="form-control" name="author" placeholder="Your username" type="hidden">

          <div class="form-group">
            <label class="col-lg-2 control-label">Cover Image</label>
            <div class="col-lg-6">
              <input class="form-control" name="coverImage" placeholder="Image URL" type="text">
            </div>
          </div>
          
          <div class="form-group">
            <label class="col-lg-2 control-label">Description</label>
            <div class="col-lg-6">
              <input class="form-control" name="description" placeholder="Description" type="text">
            </div>
          </div>
          
          <div class="form-group">
            <div class="col-lg-6 col-lg-offset-2">
              <input type="submit" id="inverse-button" class="btn btn-primary"></input>
            </div>
          </div>
        
        </fieldset>
      </form>

    </main>

  </body>
  
  <footer>
    <% include ../partials/footer.ejs %>
  </footer>

</html>