<!DOCTYPE html>
<html ng-app="Goodgame">
  <head>
    <% include ../partials/head.ejs %>
  </head>
  <body ng-controller="SearchController as ctrl">
  <% include ../partials/nav.ejs %>

  <main style="padding-top: 70px">
    <div class="row text-center">
            <h1>GAME SEARCH</h1>
            <hr class="separator separator-dark">
    </div>

  <form ng-submit="ctrl.find()">
  	<div class='form-group'>
  		<label>Search for a game</label>
  		<input type='text' ng-model="searchTerm" name='search' class='form-control' placeholder='Enter a game name'>
  	</div>

	<button type='submit' class='btn btn-danger'>Search</button>
  </form>
  </main>

    <!-- game results -->
  <div class="col-md-8 col-md-offset-2">
  <table class="table table-hover">
    <thead>
      <tr>
        <th></th>
        <th>Game</th>
        <th>Summary</th>
        <th>Add</th>
      </tr>
    </thead>
    <tbody>
      <tr ng-repeat="game in ctrl.searchResults">
        <td><img src="{{ game.cover.url }}"></td>
        <td>{{ game.name }}</td>
        <td>{{ game.summary }}</td>
        <td><a href="#"><i id="like" class="fa fa-heart-o" title="Add to My Games" aria-hidden="true" ng-click="ctrl.addGame(game)"></i></a></td>
      </tr>
    </tbody>
  </table>
  </div>


</body>
</html>